        <Button x:Name="btn_nega" Content="Insatisfeito&#xD;&#xA;" HorizontalAlignment="Left" Margin="583,182,0,0" VerticalAlignment="Top" Height="120" Width="140" Foreground="White" BorderBrush="White" FontSize="24" Click="btn_nega_Click">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0.477"/>
                    <GradientStop Color="#FF9C2727" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
    </Grid>
